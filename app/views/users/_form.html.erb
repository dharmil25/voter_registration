<%= form_with(model: user, local: true, html: { multipart: true }) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :uid, 'Unique Identification Number' %>
    <%= form.number_field :uid %>
  </div>

  <div class="field">
    <%= form.label :f_name, 'First Name' %>
    <%= form.text_field :f_name %>
  </div>

  <div class="field">
    <%= form.label :l_name, 'Last Name' %>
    <%= form.text_field :l_name %>
  </div>

  <div class="field">
    <%= form.label :gender, 'Gender' %>
    <%= form.select :gender, ["Male","Female"]%>
    
  </div>

  <div class="field">
    <%= form.label :age, 'Age' %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :address, 'Address' %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :pincode, 'Pincode' %>
    <%= form.number_field :pincode %>
  </div>

  <div class="field">
    <%= form.label :city, 'City' %>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :state, 'State' %>
    <%= form.text_field :state %>
  </div>

  <div class="form-group">
    <%= form.label :image, 'Image (Required)'%>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
